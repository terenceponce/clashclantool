!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title Clash Clan Tool
    = stylesheet_link_tag :application
    = csrf_meta_tags

    /[if lt IE 9]
      = javascript_include_tag 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'
      = javascript_include_tag 'https://oss.maxcdn.com/respond/1.4.2/respond.min.js'
  %body
    = render 'layouts/sections/navbar'
    .container-fluid.container
      .row
        .col-sm-12.main
          = render 'layouts/sections/flash_messages'
          = yield
    = javascript_include_tag :application
